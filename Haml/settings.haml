-extends "base.html"
-block content
	%section
		%h2 Change Password
		%form{action:"/settings", method:"POST"}
			%input{type:'hidden', name:'form_id', value:'change_password'}
			%label Old Password:
				%input{name:"old_password", type:"password", value:"{{old_password}}"}
			.error= old_error
			
			%label New Password:
				%input{name:"new_password", type:"password", value:"{{new_password}}"}
			.error= new_error

			%label Confirm New Password: 
				%input{name:"confirm_password", type:"password", value:"{{confirm_password}}"}
			.error= confirm_error
			
			%input{type:"submit", value:"Submit"}
		%p= message

	%section
		%h2 Look and Feel
		%form{action:"/settings", method:"POST"}
			%input{type:'hidden', name:'form_id', value:'css'}

			%label Style:
				%select{name:"style"}
					-for k in styles.keys()
						-if k == stylesheet
							%option{value:"{{k}}", selected:"selected"}= styles[k]
						-else
							%option{value:"{{k}}"}= styles[k]
			%br

			%label CodeMirror Theme:
				%select{name:'cm_theme'}
					-for t in themes
						-if t == codemirror_theme
							%option{value:"{{t}}", selected:"selected"}= t
						-else
							%option{value:"{{t}}"}= t
			%br
			
			%input{type:'submit', value:'Submit'}

	%section
		%h2 Ideone Account
		%form{action:"/settings", method:"POST"}
			%input{type:'hidden', name:'form_id', value:'ideone'}

			%label Username:
				%input{name:"ideone_username", type:"text", value:"{{ideone_username}}"}
			%br

			%label API Password:
				%input{name:"ideone_password", type:"password", value:"{{ideone_password}}"}
			%br
			.error= ideone_error

			%input{type:'submit', value:'Submit'}
		%p= ideone_message

